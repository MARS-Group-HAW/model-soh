          "inputConfiguration": {
            "temporalJoinAttribute": "thingId",
            "validTimeAtAttribute": "time",
            "mqttTopicPattern": "v1.1/Datastreams(${DataStreamId})/Observations",
            "mqttBrokerHostName": "iot.hamburg.de"
