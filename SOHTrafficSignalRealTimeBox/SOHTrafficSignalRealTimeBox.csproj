        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Geodan.SensorThings.SDK" Version="0.4.1" />
        <PackageReference Include="Mars.Life.Simulations" Version="5.1.0" />
        <PackageReference Include="Mars.Life.SOH" Version="4.6.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\SOHModel\SOHModel.csproj" />
    </ItemGroup>

</Project>
